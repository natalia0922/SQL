/*use a JOIN to display actors and their movies*/
SELECT famous_people.fullname,
movies.title
FROM famous_people
JOIN movies
ON famous_people.id= actor_id;

/*show the names of each pair of costars based on the data in the costars table*/
SELECT a.fullname, b.fullname
FROM costars
JOIN famous_people a
ON a.id= actor1_id
JOIN famous_people b
ON b.id= actor2_id;

/*show the name,release year and movies of Tom Cruise using JOIN combined with WHERE*/
SELECT famous_people.fullname,
movies.title,
movies.release_year
FROM famous_people
JOIN movies
ON famous_people.id= actor_id
WHERE famous_people.fullname= "Tom Cruise";
