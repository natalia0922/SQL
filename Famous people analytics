CREATE TABLE costars
(id INTEGER PRIMARY KEY AUTOINCREMENT,
    actor1_id INTEGER,
    actor2_id INTEGER);
INSERT INTO costars (actor1_id, actor2_id) VALUES (1,2);
INSERT INTO costars (actor1_id, actor2_id) VALUES (3,4);
